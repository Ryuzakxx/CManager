<Window x:Class="F1RaceHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1RaceHub"
        mc:Ignorable="d"
        Height="600" 
        Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#180161" CornerRadius="15">
        <Grid RenderTransformOrigin="0.608,0.568">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Frame x:Name="Home" 
                   Margin="5,5,0,0" 
                   NavigationUIVisibility="Hidden" 
                   Grid.Column="1" 
                   Grid.Row="1"/>

            <Rectangle HorizontalAlignment="Left" 
                       Height="561" 
                       VerticalAlignment="Top" 
                       Width="244" 
                       Grid.Row="1" 
                       StrokeThickness="3" 
                       RadiusX="9" 
                       RadiusY="9" 
                       Margin="-40,0,0,0" 
                       Grid.ColumnSpan="2" 
                       Fill="#FF4F1787"/>

            <TextBlock Text="            CManager"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="18"
                       FontFamily="Formula1 Display Regular" 
                       Width="182" 
                       Margin="24,0,0,0" 
                       Grid.ColumnSpan="2"/>

            <StackPanel Grid.Row="1"></StackPanel>

            <Image HorizontalAlignment="Left" 
                   Height="59" 
                   Margin="10,15,0,0" 
                   VerticalAlignment="Top" 
                   Width="65" 
                   Source="/Images/f1logo.png"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,5,10,10"/>

            <Rectangle HorizontalAlignment="Left" 
                       Height="100" 
                       Margin="-21,-25,0,0" 
                       Stroke="#FF4F1787" 
                       VerticalAlignment="Top" 
                       Width="947" 
                       Grid.ColumnSpan="2"
                       StrokeThickness="3" 
                       RadiusX="9" 
                       RadiusY="9"/>

            <Button x:Name="BtnFerrari" 
                    Content="Ferrari" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,5,0,0" 
                    Click="ClickFerrari" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnHome" 
                    Content="Esci" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="38" 
                    Margin="0,487,0,0" 
                    Click="ClickMain" 
                    Background="#FF4F1787" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular"/>

            <Button x:Name="BtnMcLaren" 
                    Content="McLaren" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,50,0,0" 
                    Click="ClickMcLaren" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnRedBull" 
                    Content="RedBull" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,90,0,0" 
                    Click="ClickRedBull" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnMercedes" 
                    Content="Mercedes" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,130,0,0" 
                    Click="ClickMercedes" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnAstonMartin" 
                    Content="Aston Martin" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,170,0,0" 
                    Click="ClickAstonMartin" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnAlpine" 
                    Content="Alpine" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,210,0,0" 
                    Click="ClickAlpine" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnVCARB" 
                    Content="Racing Bulls" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,250,0,0" 
                    Click="ClickVCARB" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnHaas" 
                    Content="Haas" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,290,0,0" 
                    Click="ClickHaas" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnKick" 
                    Content="Kick Sauber" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,330,0,0" 
                    Click="ClickKick" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>

            <Button x:Name="BtnWilliams" 
                    Content="Williams" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="200" 
                    Height="40" 
                    Margin="0,370,0,0" 
                    Click="ClickWilliams" 
                    Foreground="White" 
                    BorderBrush="#FF4F1787" 
                    FontFamily="Formula1 Display Regular" 
                    Background="{x:Null}"/>
            <Button x:Name="BtnPunteggio" 
                Content="Punteggio" 
                HorizontalAlignment="Center" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Width="200" 
                Height="40" 
                Margin="0,410,0,0" 
                Click="ClickPunteggio"
                Foreground="White" 
                BorderBrush="#FF4F1787" 
                FontFamily="Formula1 Display Regular" 
                Background="{x:Null}"/>
            <Button x:Name="BtnClassifica" 
                Content="Classifica" 
                HorizontalAlignment="Center" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Width="200" 
                Height="38" 
                Margin="0,449,0,0" 
                Background="#FF4F1787" 
                Foreground="White" 
                BorderBrush="#FF4F1787" 
                FontFamily="Formula1 Display Regular" Click="ClickClassifica"/>
        </Grid>
    </Border>
</Window>
